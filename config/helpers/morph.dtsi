#define MORPH_ASS(OS, LYR, NAME, DESC, MODS, KEY, KA, KS, KAS)                  \
    mp_##OS##LYR##_##NAME##_as: morph_##OS##LYR##_##DESC##_alt_shift {          \
        compatible = "zmk,behavior-mod-morph";                                  \
        label = LABEL_STRINGIFY(mp_##OS##LYR##_##NAME##_as);                        \
        #binding-cells = <0>;                                                   \
        mods = <(MODS)>;                                                        \
        bindings = <KS>, <KAS>;                                                 \
        keep-mods = <(MOD_LALT)>;                                               \
    };                                                                          \
    mp_##OS##LYR##_##NAME##_a: morph_##OS##LYR##_##DESC##_alt {                 \
        compatible = "zmk,behavior-mod-morph";                                  \
        label = LABEL_STRINGIFY(mp_##OS##LYR##_##NAME##_a);                         \
        #binding-cells = <0>;                                                   \
        mods = <(MODS)>;                                                        \
        bindings = <KEY>, <KA>;                                                 \
        keep-mods = <(MOD_LALT)>;                                               \
    };                                                                          \
    mp_##OS##LYR##_##NAME: morph_##OS##LYR##_##DESC {                           \
        compatible = "zmk,behavior-mod-morph";                                  \
        label = LABEL_STRINGIFY(mp_##OS##LYR##_##NAME);                             \
        #binding-cells = <0>;                                                   \
        mods = <(MOD_LSFT|MOD_RSFT)>;                                           \
        bindings = <&mp_##OS##LYR##_##NAME##_a>, <&mp_##OS##LYR##_##NAME##_as>; \
    };

#define MORPH_SA(OS, LYR, NAME, DESC, MODS, KEY, KS, KA)        \
    mp_##OS##LYR##_##NAME##_a: morph_##OS##LYR##_##DESC##_alt { \
        compatible = "zmk,behavior-mod-morph";                  \
        label = LABEL_STRINGIFY(mp_##OS##LYR##_##NAME##_a);         \
        #binding-cells = <0>;                                   \
        mods = <(MODS)>;                                        \
        bindings = <KEY>, <KA>;                                 \
        keep-mods = <(MOD_LALT)>;                               \
    };                                                          \
    mp_##OS##LYR##_##NAME: morph_##OS##LYR##_##DESC {           \
        compatible = "zmk,behavior-mod-morph";                  \
        label = LABEL_STRINGIFY(mp_##OS##LYR##_##NAME);             \
        #binding-cells = <0>;                                   \
        mods = <(MOD_LSFT|MOD_RSFT)>;                           \
        bindings = <&mp_##OS##LYR##_##NAME##_a>, <KS>;          \
    };
