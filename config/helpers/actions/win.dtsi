#define TO_LAYER(OS, TO) \
  to_##OS##TO: to_##OS##TO_layer { \
      compatible = "zmk,behavior-macro"; \
      label = "to_##OS##TO"; \
      #binding-cells = <0>; \
      bindings = \
          <&to OS##TO &kp F_##OS##TO>; \
  };

#define MOTO_LAYER(OS, MO, TO) \
  mo_##OS##MO_to_##OS##TO: momentary_##OS##MO_to_##OS##TO { \
      compatible = "zmk,behavior-macro"; \
      label = "mo_##OS##MO_to_##OS##TO"; \
      #binding-cells = <0>; \
      wait-ms = <MC_LAYERS>; \
      tap-ms = <MC_LAYERS>; \
      bindings \
          = <&macro_press &mo ##OS##MO> \
          , <&macro_tap &kp F_##OS##MO> \
          , <&macro_pause_for_release> \
          , <&macro_release &mo ##OS##MO> \
          , <&macro_tap &kp F_##OS##TO>; \
  };
